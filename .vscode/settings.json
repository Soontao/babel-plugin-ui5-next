{
    "editor.fontSize": 14,
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.formatOnSave": true,
    "editor.wordWrap": "on",
    "eslint.autoFixOnSave": true,
    "javascript.validate.enable": false,
    "cSpell.words": [
        "jsfragment",
        "modulepath",
        "namepath"
    ],
    "files.associations": {
        "**/test/ts-fixtures/**/*.ts*": "plaintext"
    },
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    }
}